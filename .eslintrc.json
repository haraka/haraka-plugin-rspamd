{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "plugins": [
    "haraka"
  ],
  "extends": [ "eslint:recommended", "plugin:haraka/recommended" ],
  "root": true,
  "rules": {
    "indent": [2, 4, {"SwitchCase": 1}],
    "console": 0,
    "no-console": 0
  },
  "globals": {
    "OK": true,
    "CONT": true,
    "DENY": true,
    "DENYSOFT": true,
    "DENYDISCONNECT": true,
    "DENYSOFTDISCONNECT": true
  }
}
